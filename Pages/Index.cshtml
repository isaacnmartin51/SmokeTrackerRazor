@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card text-bg-primary mb-3" style="max-width: 18rem;">
    <div class="card-body">
        <form method="post">
            <fieldset>
                <legend class="card-title">Add Smoke</legend>
                <div class="mb-3">
                    <input asp-for="CreateLog.DateSmoked" type="datetime-local" class="form-control"></input>
                </div>
                <input type="submit" value="Submit" class="btn btn-primary"></input>
            </fieldset>
        </form>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr scope="col">
            <th>Smoked Date</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in @Model.Logs)
        {
            <tr>
                <td>@log.SmokedDate</td>
                <td>@log.Count</td>
            </tr>
        }
    </tbody>
</table>
