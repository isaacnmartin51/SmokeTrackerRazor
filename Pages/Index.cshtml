@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
        <legend class="card-title">Add Smoke</legend>
                <input type="submit" value="Submit" class="btn btn-primary"></input>
        </form>

<table class="table table-striped table-bordered">
    <thead>
        <tr scope="col">
            <th>Smoked Date</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in @Model.Logs)
        {
            <tr>
                <td>@log.SmokedDate</td>
                <td>@log.Count</td>
            </tr>
        }
    </tbody>
</table>
